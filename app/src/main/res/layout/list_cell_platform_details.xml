<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/platformNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Central Station, Platform 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/time1Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Planned Departure: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/platformNameText"/>

    <TextView
        android:id="@+id/time1Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="12:00pm"
        app:layout_constraintStart_toEndOf="@id/time1Label"
        app:layout_constraintTop_toBottomOf="@id/platformNameText"/>

    <TextView
        android:id="@+id/time2Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Estimated Departure: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/time1Text"/>

    <TextView
        android:id="@+id/time2Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="12:05pm"
        app:layout_constraintStart_toEndOf="@id/time2Label"
        app:layout_constraintTop_toBottomOf="@id/time1Text"/>

</androidx.constraintlayout.widget.ConstraintLayout>